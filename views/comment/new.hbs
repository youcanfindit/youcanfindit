<h2>{{{i18n.__ "New comment"}}}</h2>
<form action="/comment/new/{{post._id}}" method="POST" id="form-container">
  <label for="comment">{{{i18n.__ "Comment"}}}</label>
  <textarea id="comment" name="comment" class="form-control"></textarea>

  <br>
  {{#if message}}
    <div class="error-message">{{ message }}</div>
  {{/if}}

  <br><br>

  <button>{{{i18n.__ "New comment"}}}</button>
</form>

