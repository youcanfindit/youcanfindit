<div class="container newWrapper listWrapper">
  <h2>{{{i18n.__ "Login"}}}</h2>

  <div class="formWrapper">

    <form action="/auth/login" method="POST" id="form-container">

      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="username">{{{i18n.__ "Username"}}}</label>
          <input id="username" type="text" name="username" placeholder="{{{i18n.__ " User name "}}}">
        </div>

        <div class="form-group col-md-6">
          <label for="password">{{{i18n.__ "Password"}}}</label>
          <input id="password" type="password" name="password" placeholder="{{{i18n.__ " Your password "}}}">
        </div>
      </div>

      {{#if message }}
      <div class="error-message">{{ message }}</div>
      {{/if}}
      
      <div class="form-row buttonWrapper">
        <div class="form-group col-md-12">
          <button class="btn btn-primary">{{{i18n.__ "Log in"}}}</button>
        </div>
      </div>

      <div class="form-row buttonWrapper">
        <div class="form-group col-md-12">
          <p class="account-message">
            {{{i18n.__ "Don't have an account yet?"}}}
            <a href="/auth/signup" class="btn btn-primary">{{{i18n.__ "Signup"}}}</a>
          </p>
        </div>
      </div>

    </form>

  </div>
</div>