<div class="container newWrapper listWrapper">
  <h2>{{{i18n.__ "Signup"}}}</h2>

  <div class="formWrapper">

    <form action="/auth/signup" method="POST" id="form-container" enctype="multipart/form-data">

      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="username">{{{i18n.__ "Username"}}}</label>
          <input id="username" type="text" name="username" placeholder="{{{i18n.__ " User name "}}}">
        </div>

        <div class="form-group col-md-6">
          <label for="password">{{{i18n.__ "Password"}}}</label>
          <input id="password" type="password" name="password" placeholder="{{{i18n.__ " Your password "}}}">
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="email">{{{i18n.__ "Email address"}}}</label>
          <input id="email" type="text" name="email" placeholder="{{{i18n.__ " Email address "}}}">
        </div>

        <div class="form-group col-md-6">
          <label for="name">{{{i18n.__ "Name"}}}</label>
          <input id="name" type="text" name="name" placeholder="{{{i18n.__ " Name "}}}">
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="profilePic">{{{i18n.__ "Profile picture"}}}</label>
          <input type="file" class="form-control-file" id="profilePic" name="profilePic">
        </div>
      </div>

      {{#if message }}
      <div class="error-message">{{ message }}</div>
      {{/if}}

      <div class="form-row buttonWrapper">
        <div class="form-group col-md-12">
          <button>{{{i18n.__ "Create account"}}}</button>
        </div>
      </div>
      
      <div class="form-row buttonWrapper">
        <div class="form-group col-md-12">
          <p class="account-message">
            {{{i18n.__ "Do you already have an account?"}}}
            <a href="/auth/login">{{{i18n.__ "Login"}}}</a>
          </p>
        </div>
      </div>

    </form>

  </div>
</div>