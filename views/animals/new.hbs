<div class="container newWrapper listWrapper">
    <h2>New pet</h2>

    <div class="formWrapper">
        <form action="/animal/new" method="POST" enctype="multipart/form-data">

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="species">Especie</label>
                    <select name="species" required>
                        <option value="" selected>Especie</option>
                        <option value="Perro">Perro</option>
                        <option value="Gato">Gato</option>
                        <option value="Ave">Ave</option>
                        <option value="Serpiente">Serpiente</option>
                    </select>
                </div>

                <div class="form-group col-md-6">
                    <label for="breed">Breed</label>
                    <input name="breed" class="form-control"></input>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-3">
                    <label for="name">Name</label>
                    <input name="name" class="form-control" required></input>
                </div>

                <div class="form-group col-md-3">
                    <label for="color">Color</label>
                    <input name="color" class="form-control" required></input>
                </div>

                <div class="form-group col-md-3">
                    <label for="gender">Gender</label>
                    <input name="gender" class="form-control"></input>
                </div>

                <div class="form-group col-md-3">
                    <label for="chip">Chip</label>
                    <input name="chip" class="form-control"></input>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="description">Description</label>
                    <textarea name="description" class="form-control"></textarea>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="profilePic">Upload a picture</label>
                    <input type="file" class="form-control-file" id="profilePic" name="profilePic">
                </div>
            </div>

            {{#if message }}
            <div class="error-message">
                {{ message }}
            </div>
            {{/if}}

            <div class="form-row buttonWrapper">
                <div class="form-group col-md-12">
                    <button>New pet</button>
                </div>
            </div>

        </form>
    </div>
</div>