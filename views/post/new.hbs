<h2>Nuevo anuncio</h2>
{{#unless noAnimals}}
<form action="/post/new" method="POST" id="form-container">
  <label for="animal">Mascota</label>
  <select name="animal">
    <option value="" selected>Selecciona una mascota</option>
    {{#each animals}}
    <option value="{{this._id}}">{{this.name}}</option>
    {{/each}}
  </select>

  <br>

  <label for="description">Descripción</label>
  <textarea name="description" class="form-control"></textarea>

  <br>

  <label for="date">Fecha de desaparición</label>
  <input id="date" type="date" name="date" />

  <br>

  <label for="location">Ubicación aproximada</label>
  <input id="geocomplete" type="text" name="literal" placeholder="Escribe una direccion" value="Madrid" />
  <input id="find" type="button" value="Buscar" />
  <br>
  <div style="height: 200px; width: 400px" id="post-location"></div>
  <input type="hidden" id="latitude" name="lat">
  <input type="hidden" id="longitude" name="lng">
  <br>
  {{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}}

  <br><br>

  <button id="new">Crear anuncio</button>
</form>
{{/unless}}
{{#if noAnimals}}
<p>
  {{noAnimals}}
  <a href="/animal/new">Crear nueva mascota</a>
</p>

{{/if}}
