<div class="container listWrapper">
  <div class="row">
    <div class="col-md-6 mainCol">
      <div class="cardWrapper">
        <div class="card" style="width: 18rem;">
          <img class="card-img-top" src="{{post.animalId.profilePic}}" alt="{{post.animalId.name}}">
          <div class="card-body">
            <p>{{{i18n.__ "Name"}}}: {{post.animalId.name}}</p>
            <p>{{{i18n.__ "Owner"}}}: {{post.userId.username}}</p>
            <p>{{{i18n.__ "Reward"}}}: {{post.reward}}</p>
            <p>{{{i18n.__ "Date"}}}: {{post.date}}</p>
            <p>{{{i18n.__ "State"}}}: {{post.animalId.state}}</p>
            <p>{{{i18n.__ "Description"}}}: {{post.description}}</p>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="map">
        <div id="post-location" class="detail"></div>
        <input type="hidden" id="latitude" name="lat" value="{{post.location.coordinates.[1]}}">
        <input type="hidden" id="longitude" name="lng" value="{{post.location.coordinates.[0]}}">
      </div>
    </div>

  </div>

  <div class="container">
    {{#each comments}}
    <p>{{this.userId.username}}</p>
    <p>{{this.comment}}</p>
    <a href="/comment/delete/{{this._id}}" class="btn btn-primary">{{{../i18n.__ "Delete comment"}}}</a>
    <a href="/comment/edit/{{this._id}}" class="btn btn-primary">{{{../i18n.__ "Edit comment"}}}</a>
    {{/each}}
  </div>

  <div class="container">
    <a href="/comment/new/{{post._id}}" id="newComment" class="btn btn-primary">{{{i18n.__ "New comment"}}}</a>
  </div>

</div>