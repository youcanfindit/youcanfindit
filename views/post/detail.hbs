<p>{{post.userId.username}}</p>
<p>{{post.animalId.name}}</p>



<p>{{post.description}}</p>
<p>{{post.animal.state}}</p>
<p>{{post.date}}</p>
<div style="height: 200px; width: 400px" id="post-location" class="detail">
<input type="hidden" id="latitude" name="lat" value="{{post.location.coordinates.[1]}}">
<input type="hidden" id="longitude" name="lng" value="{{post.location.coordinates.[0]}}">
<p>{{post.reward}}</p>

{{#each comments}}
<p>
  {{this.userId.username}}
</p>
<p>
  {{this.comment}}
</p>
<a href="/comment/delete/{{this._id}}">Borrar comentario</a>
<a href="/comment/edit/{{this._id}}">Editar comentario</a>


{{/each}}


<a href="/comment/new/{{post._id}}">Nuevo comentario</a>
